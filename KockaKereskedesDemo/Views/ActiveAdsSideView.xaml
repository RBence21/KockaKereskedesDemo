<UserControl x:Class="KockaKereskedesDemo.Views.ActiveAdsSideView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KockaKereskedesDemo.Views"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="350">
    <Grid Opacity="0.95" Background="#13182e">
        <StackPanel Orientation="Vertical">
            <Button Background="Transparent" 
                    Width="110"
                    BorderThickness="0"
                    HorizontalContentAlignment="Left"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="&lt;- vissza a menübe" 
                    Foreground="White"
                    Command="{Binding BackToDashboardCommand}"
                    CommandParameter="dashboard"
                    />
            <TextBlock Text="Rendezés és szűrés" 
                       Foreground="White"
                       Margin="0,20,0,0"
                       FontSize="20"
                       HorizontalAlignment="Center"
                       />

        </StackPanel>
    </Grid>
</UserControl>
